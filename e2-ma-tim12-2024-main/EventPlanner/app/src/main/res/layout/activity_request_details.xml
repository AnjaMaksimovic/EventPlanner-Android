<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.regRequests.RequestDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/checkbox_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="0dp"
                android:text="Owner details"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="Owner info"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="Name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/person_lastname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="Lastname"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/person_address"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="PUPVEmail"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/person_phone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="PUPVEmail"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/person_email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="PUPVEmail"
            android:textSize="18sp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="Company info"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="Company name"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/company_description"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="Company name"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/company_address"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="Company email"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/company_email"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="Company email"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/company_phone"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="Company email"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:text="Company email"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/eventTypes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:text="Company email"
            android:textSize="20sp"/>


        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/approve_btn"
                android:layout_width="180sp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:text="Approve"/>
            <Button
                android:id="@+id/decline_btn"
                android:layout_width="180sp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:text="Reject"/>
        </LinearLayout>

        <EditText
            android:id="@+id/decline_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:layout_margin="5dp"
            android:hint="Reason for rejecting"
            android:visibility="gone" />

        <Button
            android:id="@+id/confirm_decline_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:height="50dp"
            android:text="Confirm"
            android:visibility="gone" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>