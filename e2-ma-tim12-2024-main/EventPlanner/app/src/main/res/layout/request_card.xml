<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="325dp"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/request_card_item"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/checkbox_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="@string/photo_book"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/person_email"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="PUPVEmail"
            android:textSize="14sp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="Company name"
            android:textSize="14sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/company_email"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="Company email"
            android:textSize="14sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/date_requested"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="Date"
            android:textSize="14sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="Categories"
            android:textSize="14sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/eventTypes"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:text="Event types"
            android:textSize="14sp"
            android:textStyle="italic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/details_btn"
                android:layout_width="180sp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:text="Details" />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>