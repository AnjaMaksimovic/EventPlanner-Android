<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.reservations.ReservationsListFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:text="Reservations"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <SearchView
            android:id="@+id/search_reservations"
            app:queryHint="Search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_background"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:layout_margin="8sp"
        android:gravity="start"
        android:textStyle="italic"
        android:text="filters:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <CheckBox
            android:id="@+id/cb_new_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new"/>
        <CheckBox
            android:id="@+id/cb_pup_cancel_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel by pup"/>
        <CheckBox
            android:id="@+id/cb_org_cancel_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel by organizer"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <CheckBox
            android:id="@+id/cb_admin_cancel_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel by admin"/>
        <CheckBox
            android:id="@+id/cb_accepted_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="accepted"/>
        <CheckBox
            android:id="@+id/cb_realized_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="realized"/>
    </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/reservations_card"/>
</LinearLayout>