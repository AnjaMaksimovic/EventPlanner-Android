<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="vertical"
    android:background="@drawable/border_background"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/event_type_card_item"
    >
    <TextView
        android:id="@+id/event_type_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:text="Event type 1"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/event_type_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:text="Event type 1 description"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/event_type_subcategories"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:text="Event type 1 subcategories"
        android:textSize="18sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/event_type_activity"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:text="Active"
        android:textSize="18sp"
        android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnActivateEventType"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Activate" />

            <Button
                android:id="@+id/btnDeactivateEventType"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Deactivate" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="Edit"
                app:srcCompat="@drawable/ic_edit"/>



        </LinearLayout>
</LinearLayout>