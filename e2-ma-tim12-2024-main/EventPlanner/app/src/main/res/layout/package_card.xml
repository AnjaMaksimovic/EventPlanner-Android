<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/package_card_item"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginVertical="3dp"
    android:background="@drawable/border_background"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/package_image"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/photobook" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/checkbox_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/package_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="@string/package_name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/package_item_checkbox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0" />
        </LinearLayout>

        <TextView
            android:id="@+id/package_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="1dp"
            android:text="@string/package_description"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/package_item1"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/package_item2"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/package_item3"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/package_price"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:text="@string/product_price"
            android:textSize="14sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnEditPackage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/delete"
                app:srcCompat="@drawable/ic_edit" />

            <ImageButton
                android:id="@+id/btnDeletePackage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/delete"
                app:srcCompat="@drawable/ic_delete" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>