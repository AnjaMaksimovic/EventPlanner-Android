<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.reviews.ReviewsListFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/filter_reviews_rg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/all_filter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="all"
                android:textSize="25dp"/>
            <RadioButton
                android:id="@+id/one_filter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25dp"/>
            <RadioButton
                android:id="@+id/two_filter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="25dp"/>
            <RadioButton
                android:id="@+id/three_filter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="25dp"/>
            <RadioButton
                android:id="@+id/four_filter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="25dp"/>
            <RadioButton
                android:id="@+id/five_filter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="25dp"/>
        </RadioGroup>
        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            tools:listitem="@layout/review_card"/>
    </LinearLayout>
</FrameLayout>