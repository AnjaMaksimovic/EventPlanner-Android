<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.packages.ReservationForPackageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/checkbox_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="0dp"
                android:text="Package details"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/package_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="Name"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/my_events_layout"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_event"
                android:layout_width="126dp"
                android:layout_height="40dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:text="Choose event for product: "
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_types" />

            <Spinner
                android:id="@+id/spinEvent"
                android:layout_width="229dp"
                android:layout_height="58dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/category"
                android:text="@string/category"
                android:tooltipText="@string/category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_types" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="Products from package:"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/package_products"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="products"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="Services from package:"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/package_service1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="products"
            android:textSize="20sp" />
        <LinearLayout
            android:id="@+id/service1_layout"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/employee1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:text="Choose employee"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_types" />

            <Spinner
                android:id="@+id/spinEmployee1"
                android:layout_width="150dp"
                android:layout_height="58dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/category"
                android:text="@string/category"
                android:tooltipText="@string/category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_types" />

            <CheckBox
                android:id="@+id/cbReject1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"/>
        </LinearLayout>
        <TextView
            android:id="@+id/package_service2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="products"
            android:textSize="20sp" />
        <LinearLayout
            android:id="@+id/service2_layout"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/employee2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:text="Choose employee"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_types" />

            <Spinner
                android:id="@+id/spinEmployee2"
                android:layout_width="150dp"
                android:layout_height="58dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/category"
                android:text="@string/category"
                android:tooltipText="@string/category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_types" />
            <CheckBox
                android:id="@+id/cbReject2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"/>
        </LinearLayout>

        <Button
            android:id="@+id/buyConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="150dp"
            android:text="Confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.859"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>
</ScrollView>