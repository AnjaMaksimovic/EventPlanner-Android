<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/event_agenda_card_item"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/event_activity_name"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_margin="3dp"
            android:text="Event activity name"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/event_activity_description"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="Description"
            android:textSize="14sp"
            android:textStyle="italic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/event_activity_start_time"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:text="Start"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/event_activity_end_time"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:text="End"
            android:textSize="14sp"
            android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/event_activity_location"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:text="Location"
            android:textSize="14sp"
            android:textStyle="italic"/>
    </LinearLayout>

</LinearLayout>